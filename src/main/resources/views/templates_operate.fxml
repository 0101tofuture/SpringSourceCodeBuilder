<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="box" prefWidth="1000" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.fpp.code.fx.controller.TemplatesOperateController">
    <children>
        <AnchorPane>
            <children>
                <CheckBox fx:id="isAllTable" layoutX="57.0" layoutY="20.0" mnemonicParsing="false" text="全库生成" />
                <Label layoutX="166.0" layoutY="21.0" text="目标表名" />
                <TextField fx:id="targetTable" layoutX="229.0" layoutY="18.0" />
                <Button layoutX="430.0" layoutY="17.0" mnemonicParsing="false" onAction="#refreshTemplate" text="刷新模板" />
                <Button layoutX="526.0" layoutY="17.0" mnemonicParsing="false" onAction="#saveConfig" prefHeight="23.0" prefWidth="90.0" text="持久化配置" />
            </children>
            <padding>
                <Insets bottom="10.0" />
            </padding>
        </AnchorPane>
        <Pane prefHeight="72.0" prefWidth="1000.0">
            <children>
                <CheckBox fx:id="isDefinedFunction" layoutX="56.0" layoutY="44.0" mnemonicParsing="false" text="生成以模板方法体为模板的方法" />
                <Label layoutX="57.0" layoutY="20.0" text="字段名(多个,分开)" />
                <Label layoutX="362.0" layoutY="20.0" text="代表因子" />
                <TextField fx:id="fields" layoutX="430.0" layoutY="16.0" />
                <TextField fx:id="representFactor" layoutX="162.0" layoutY="17.0" />
            </children>
        </Pane>
        <ScrollPane prefHeight="530">
            <FlowPane fx:id="templates" prefWidth="-1.0" VBox.vgrow="NEVER"/>
        </ScrollPane>
    </children>
</VBox>
